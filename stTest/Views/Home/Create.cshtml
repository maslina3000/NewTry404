@model stTest.Models.Answer
@{
    ViewBag.Title = "Добавление ответа";
}

    <div class="jumbotron">
        <form asp-action="create" asp-controller="home">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Введите имя</label><br>
                <input type="text" asp-for="Name" class="form-control" /><br>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label">Введите возраст</label><br>
                <input type="number" asp-for="Age" class="form-control" /><br>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Введите пол</label><br>
                <input type="radio" asp-for="Gender" name="Gender" value="male"> Мужской<br>
                <input type="radio" asp-for="Gender" name="Gender" value="female"> Женский<br>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Введите дату рождения</label><br>
                <input type="date" asp-for="BirthDate" class="form-control" /><br>
            </div>
            <div class="form-group">
                <label asp-for="MaritalStatus" class="control-label">Введите семейное положение</label><br>
                <input type="radio" asp-for="MaritalStatus" name="MaritalStatus" value="single"> Не замужем/не женат<br>
                <input type="radio" asp-for="MaritalStatus" name="MaritalStatus" value="maried"> Замужем/женат<br>
            </div>
            <div class="form-group">
                <label asp-for="Programming" class="control-label">Любите ли вы программировать</label><br>
                <input type="radio" asp-for="Programming" name="Programming" value="yes"> Да<br>
                <input type="radio" asp-for="Programming" name="Programming" value="no"> Нет<br>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>

        </form>
    </div>

